<p id="notice"><%= notice %></p>

<p>
  <strong>Номер поезда:</strong>
  <%= @train.number %>
</p>

<% if @train.route.nil? %>
  <p>Маршрут не назначен</p>
<% else %>
  <p>Поезд ходит по следубщему маршруту:</p>
  <p>
    <%= @train.route.name %>
  </p>
<% end %>

<% if @train.carriges.nil? %>
  <p>Вагонов нет</p>
<% else %>
    <table>
      <thead>
      <tr>
        <th>Тип вагона</th>
        <th>Верхние места</th>
        <th>Нижние места</th>
      </tr>
      </thead>
      <tbody>
        <% @train.carriges.each do |carrige| %>
          <tr>
            <td><%= carrige.carrige_type %></td>
            <td><%= carrige.up_sits %></td>
            <td><%= carrige.down_sits %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
