<p id="notice"><%= notice %></p>

<p>
  <strong>Номер поезда:</strong>
  <%= @train.number %>
</p>

<% if @train.route.nil? %>
  <p>Маршрут не назначен</p>
<% else %>
  <p>Поезд ходит по следубщему маршруту:</p>
  <p>
    <%= @train.route.name %>
  </p>
<% end %>

<% if @train.carriges.present? %>
  <table>
      <thead>
      <tr>
        <th>Номер вагона</th>
        <th>Тип вагона</th>
        <th>Места</th>
      </tr>
      </thead>
      <tbody>
        <% @train.ordered_carriges.each do |carrige| %>
          <tr>
            <td><%= link_to carrige.number, carrige_path(id: carrige.id) %></td>          
            <td><%= carrige.carrige_type %></td>
            <td>
              <p>
                <strong>Up-sits:</strong>
                <%= carrige.up_sits %>
              </p>

              <p>
                <strong>Down-sits:</strong>
                <%= carrige.down_sits %>
              </p>

              <p>
                <strong>Side-up-sits:</strong>
                <%= carrige.side_up_sits %>
              </p>

              <p>
                <strong>Side-down-sits:</strong>
                <%= carrige.side_down_sits %>
              </p>

              <p>
                <strong>Sitting-sits:</strong>
                <%= carrige.sitting_sits %>
              </p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
  <p>Вагонов нет</p>
<% end %>

<%= link_to 'New carrige', new_train_carrige_path(train_id: @train.id) %><br/>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
